{
    "workspaces": [
        "./shared",
        "./server",
        "./client"
    ],
    "scripts": {
        "start": "node server/dist/index.js",
        "build": "npm run build --workspaces --if-present",
        "bbuild": "npm run build -w shared && npm run build -w server",
        "dev": "npm run build && npm start",
        "lint": "eslint .",
        "vercel-build": "npm install --include=dev && npm run build -w shared && npm run build -w client && npm run build -w server"
    },
    "dependencies": {
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^20.0.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^7.1.2",
        "dotenv-webpack": "^8.1.0",
        "lodash-es": "^4.17.21",
        "style-loader": "^4.0.0",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.4.5",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin-ts": "^2.1.0",
        "@vercel/node": "^3.0.0",
        "eslint": "^8.57.1",
        "typescript-eslint": "^7.12.0",
        "webpack-bundle-analyzer": "^4.10.2"
    }
}
