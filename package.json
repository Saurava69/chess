{
    "workspaces": [
        "./shared",
        "./server",
        "./client"
    ],
    "scripts": {
        "start": "node server/dist/index.js",
        "build": "npm run build --workspaces --if-present",
        "bbuild": "npm run build -w shared && npm run build -w server",
        "dev": "npm run build && npm start",
        "lint": "eslint .",
        "vercel-build": "npm install --workspaces && npm run build -w shared && npm run build -w client && npm run build -w server"
    },
    "dependencies": {
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^20.0.0",
        "lodash-es": "^4.17.21",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.4.5"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin-ts": "^2.1.0",
        "@vercel/node": "^3.0.0",
        "eslint": "^8.57.1",
        "typescript-eslint": "^7.12.0",
        "webpack-bundle-analyzer": "^4.10.2"
    }
}
